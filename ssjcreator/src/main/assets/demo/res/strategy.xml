<ssj xmlns="hcm.ssj" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="hcm.ssj http://hcmlab.github.io/ssj/res/feedback.xsd">
    <strategy>

        <feedback type="audio">
            <condition type="BodyEnergy" event="OverallActivation" sender="SSJ" from="0.0" to="3.0"/>
            <action res="SSJ/Creator/res/blop.mp3" intensity="0.0"/>
        </feedback>
        <feedback type="audio">
            <condition type="BodyEnergy" event="OverallActivation" sender="SSJ" from="3.0" to="12.0"/>
            <action res="SSJ/Creator/res/blop.mp3" intensity="0.5"/>
        </feedback>
        <feedback type="audio">
            <condition type="BodyEnergy" event="OverallActivation" sender="SSJ" from="12.0" to="999.0"/>
            <action res="SSJ/Creator/res/blop.mp3" intensity="1.0"/>
        </feedback>

        <feedback type="visual" position="0">
            <condition type="BodyEnergy" event="OverallActivation" sender="SSJ" from="0.0" to="3.0"/>
            <action res="SSJ/Creator/res/orientation_low.png, SSJ/Creator/res/thumb_negative.png"/>
        </feedback>
        <feedback type="visual" position="0">
            <condition type="BodyEnergy" event="OverallActivation" sender="SSJ" from="3.0" to="12.0"/>
            <action res="SSJ/Creator/res/orientation_med.png, SSJ/Creator/res/thumb_positive.png"/>
        </feedback>
        <feedback type="visual" position="0">
            <condition type="BodyEnergy" event="OverallActivation" sender="SSJ" from="12.0" to="999.0"/>
            <action res="SSJ/Creator/res/orientation_high.png, SSJ/Creator/res/thumb_negative.png"/>
        </feedback>

    </strategy>
</ssj>

